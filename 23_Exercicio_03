# > LET´S CODE - CODE ONE
# > Exercicio 03

import math

def area_circulo(raio_function):
    return math.pi * (raio_function**2 )
    
raio = float(input('Informe o raio: '))
while (raio < 0):
    print('Esse número não é válido! Tente novamente.')
    raio = float(input('Informe o raio: '))

area = area_circulo(raio) 
print('A área do círculo é:', area)
